<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.applandeo.materialcalendarview.CalendarView
            android:visibility="gone"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:abbreviationsBarColor="#181717"
            app:abbreviationsLabelsColor="@android:color/white"
            app:daysLabelsColor="@android:color/white"
            app:headerColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pagesColor="@color/colorLogoBlack"
            app:selectionColor="@android:color/white"
            app:selectionLabelColor="@color/colorLogoBlack"
            app:anotherMonthsDaysLabelsColor="@color/colorLogoBlack"
            app:todayLabelColor="@color/colorPrimary"
            app:type="many_days_picker" />

        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/colorWhite"
            android:background="#181717"
            android:layout_alignParentRight="true"
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/apply" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="0dp"
            android:background="@drawable/background_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <ImageView
                        android:tint="@color/colorYellowDark"
                        app:srcCompat="@drawable/distance"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginTop="0dp"
                        android:gravity="bottom"
                        android:text="@string/distance"
                        android:layout_weight="5"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorLogoBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <TextView
                        android:gravity="right"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorLogoBlack"
                        android:id="@+id/distance_requete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <ImageView
                        android:tint="@color/colorYellowDark"
                        app:srcCompat="@drawable/clock"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginTop="0dp"
                        android:gravity="bottom"
                        android:text="@string/dur_e"
                        android:layout_weight="5"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorLogoBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <TextView
                        android:gravity="right"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorLogoBlack"
                        android:id="@+id/duree_requete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <ImageView
                        android:tint="@color/colorYellowDark"
                        app:srcCompat="@drawable/coin"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginTop="0dp"
                        android:gravity="bottom"
                        android:text="@string/total_cost"
                        android:layout_weight="5"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorLogoBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <TextView
                        android:gravity="right"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorLogoBlack"
                        android:id="@+id/cout_requete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <ImageView
                        android:tint="@color/colorYellowDark"
                        app:srcCompat="@drawable/calendar"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_marginTop="0dp"
                        android:gravity="bottom"
                        android:text="Start : "
                        android:layout_weight="5"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorLogoBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">

                    <TextView
                        android:gravity="right"
                        android:layout_marginTop="0dp"
                        android:text="End : "
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorLogoBlack"
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:padding="10dp"
            android:id="@+id/layout_date_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left">

            <LinearLayout
                android:id="@+id/layout_nb_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:textAllCaps="true"
                    android:textColor="@color/colorLogoBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nb_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:scaleY="1.25"
                android:scaleX="1.25"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/layout_nb_day"
                android:layout_alignParentRight="true"
                android:layout_weight="2"
                android:id="@+id/edit_prenom"
                android:padding="0dp"
                app:srcCompat="@drawable/ic_add_circle_black_24dp"
                android:tint="@color/colorYellowDark"
                android:layout_width="25dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:padding="10dp"
            android:id="@+id/layout_heure_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorLogoBlack"
                    android:textSize="16dp"
                    android:text="@string/heure_d_part"/>

                <TextView
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:id="@+id/heure_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="0dp"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|left">

                <TextView
                    android:textAllCaps="true"
                    android:textColor="@color/colorLogoBlack"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/return_time"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:id="@+id/heure_retour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:theme="@style/SCBSwitch"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:id="@+id/switch_round"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="30dp">

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="@dimen/buttonTextSize"
                android:layout_centerHorizontal="true"
                android:cursorVisible="false"
                android:gravity="center"
                android:id="@+id/envoyer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"
                android:text="@string/book_later"
                android:textColor="@color/colorLogoBlack"
                android:layout_above="@+id/creer_compte"/>

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="@dimen/buttonTextSize"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_button_second"
                android:layout_alignParentRight="true"
                android:id="@+id/annuler"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

